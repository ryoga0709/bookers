<html>
<h1>Books</h1>
<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td class="book-body"><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Aer you suteï¼Ÿ" %></td>
   </tr>
  </tbody>
  <%end%>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved
 <ul>
  <%= @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>

<%= form_with model: @book do |f| %>
 <div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
 <div><%= f.submit 'Create Book' %></div>
<% end %>

</html>